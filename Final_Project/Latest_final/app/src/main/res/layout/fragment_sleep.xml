<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:padding="50dp"
    android:animateLayoutChanges="true"
    android:orientation="vertical">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="15dp"
            android:textColor="#ff222222"
            android:layout_marginBottom="10dp"
            android:text="How sleepy are you today?"/>
        <TextView
            android:id="@+id/text_view_sleepiness"
            android:layout_width="wrap_content"
            android:layout_weight="1"
            android:textColor="#ff222222"
            android:layout_height="wrap_content"
            android:gravity="right"
            android:textSize="15dp"
            android:layout_marginBottom="10dp"
            android:text="Somewhat"/>

    </LinearLayout>
    <SeekBar
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:max="2"
        android:scrollbarSize="5dp"
        android:id="@+id/sleep_seekbar"
        android:progressDrawable="@drawable/progress_drawable"
        android:thumb="@drawable/sleep2"/>


    <TextView
        android:layout_marginTop="20dp"
        android:textSize="15dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="How do you feel about your sleep?"
        android:textColor="#ff222222"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center">
        <ImageView
            android:id="@+id/sleep_satisfied_yes"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_margin="10dp"
            android:alpha="0.3"
            android:src="@drawable/ic_happy"/>
        <ImageView
            android:id="@+id/sleep_satisfied_no"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_margin="10dp"
            android:alpha="0.3"
            android:src="@drawable/ic_sad"/>
    </LinearLayout>
    <Button
        android:id="@+id/btn_questions_done"
        android:layout_margin="20dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:visibility="gone"
        android:text="Done!"/>
</LinearLayout>
