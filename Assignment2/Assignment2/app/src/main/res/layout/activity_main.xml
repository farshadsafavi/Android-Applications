<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F000"
    tools:context="com.example.farshad.assignment2.MainActivity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:paddingLeft="16dp"
        android:paddingRight="16dp"
        android:text="create a list of movies along with their the year it was made and one of the actors in it. This information will be stored in
a file or files on the device, and so permit the storage and loading of those."
        android:textColor="@color/light_gray"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:gravity="center"
        tools:context="com.example.farshad.assignment2.MainActivity">

        <Button
            android:layout_width="256dp"
            android:layout_height="56dp"
            android:layout_marginTop="16dp"
            android:layout_marginBottom="6dp"
            android:id="@+id/Enter_Title"
            android:text="Enter Movies Info"
            android:onClick="ChangeFragment"/>
        <Button
            android:layout_width="256dp"
            android:layout_height="56dp"
            android:layout_marginBottom="6dp"
            android:id="@+id/Store"
            android:text="Store"
            android:onClick="ChangeFragment"/>
        <Button
            android:layout_width="256dp"
            android:layout_height="56dp"
            android:layout_marginBottom="6dp"
            android:id="@+id/View"
            android:text="View" />
        <Button
            android:layout_width="256dp"
            android:layout_height="56dp"
            android:layout_marginBottom="6dp"
            android:id="@+id/Load"
            android:text="Load"
            android:onClick="ChangeFragment"/>
        <Button
            android:layout_width="256dp"
            android:layout_height="56dp"
            android:layout_marginBottom="6dp"
            android:id="@+id/Exit"
            android:text="Exit" />
    </LinearLayout>

</RelativeLayout>